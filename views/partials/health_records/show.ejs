<section class="navbar">
  <ul>
    <li><a href="/care_plans/{{carePlan._id}}">Journal</a></li>
    <li><a href="/care_plans/{{carePlan._id}}/care_providers">Care Team</a></li>
    <li class="active"><a href="/care_plans/{{carePlan._id}}/health_record">Health Record</a></li>
  </ul>
</section>

<section class="title">
  <div class="avatar">
    <div class="image"></div>
  </div>
  <div class="name">
    <h2>{{carePlan.patient.name}}</h2>
  </div>
</section>
<section class="main health-record">
  <section class="demograhics">
    <table>
      <tr>
        <td>Date of birth
        <td>{{demographics.dob}}
      <tr>
        <td>Gender
        <td>{{demographics.gender}}
      <tr>
        <td>Marital status
        <td>{{demographics.marital_status}}
    </table>
  </section>
  <section class="medications">
    <ng:switch on="!!medications.length">
      <div ng:switch-when="true">
        <li ng-repeat="medication in medications">
          {{medication.dose_quantity.value}} {{medication.dose_quantity.unit}} {{medication.product.name}}
          <dl class='timeframe'>
            <dt class="start">Taken from</dt>
            <dd>{{medication.start | date:'fullDate'}}</dd>
            <dt class="end">to</dt>
            <dd>{{medication.start | date:'fullDate' || 'N/A' }}</dd>
            <dt>Every</dt>
            <dd>{{medication.schedule.period.value || 'Not specified'}} {{medication.schedule.period.unit}}</dd>
          </dl>
        </li>
      </div>
      <div ng:switch-when="false">
        No medications listed.
      </div>
    </ng:switch>
  </section>
</section>
